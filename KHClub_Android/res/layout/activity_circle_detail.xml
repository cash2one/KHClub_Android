<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">
	
	<include layout="@layout/layout_title_bar" />

	<ScrollView
	    android:id="@+id/scrollView1"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
		    <com.jlxc.app.group.view.LoopViewPager
		        android:id="@+id/loop_view_page_group"
		        android:layout_width="match_parent"
		        android:layout_height="130dp"
		        android:background="@drawable/loading_default" >
    		</com.jlxc.app.group.view.LoopViewPager>
		    <TextView 
		        android:id="@+id/title_text_view"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:padding="10dp"/>
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:background="@color/main_gary"/>
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:padding="10dp"/>
		    <TextView 
		        android:id="@+id/intro_text_view"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:paddingBottom="10dp"/>        
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:background="@color/main_gary"/>
		    <TextView 
		        android:id="@+id/address_text_view"
		        android:drawableLeft="@drawable/abc_ab_bottom_solid_light_holo"
		        android:drawablePadding="10dp"
		        android:gravity="center_vertical"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="20dp"
		        android:layout_marginBottom="5dp"/>    
		    <View 
		        android:layout_width="match_parent"
		        android:layout_marginLeft="40dp"
		        android:layout_height="1dp"
		        android:background="@color/main_gary"/> 		    
		    <TextView 
		        android:id="@+id/manager_name_text_view"
		        android:drawableLeft="@drawable/abc_ab_bottom_solid_light_holo"
		        android:drawablePadding="10dp"
		        android:gravity="center_vertical"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="10dp"
		        android:layout_marginBottom="5dp"/>    
		    <View 
		        android:layout_width="match_parent"
		        android:layout_marginLeft="40dp"
		        android:layout_height="1dp"
		        android:background="@color/main_gary"/>    
		    <TextView 
		        android:id="@+id/phone_text_view"
		        android:drawableLeft="@drawable/abc_ab_bottom_solid_light_holo"
		        android:drawablePadding="10dp"
		        android:gravity="center_vertical"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="10dp"
		        android:layout_marginBottom="5dp"/>    
		    <View 
		        android:layout_width="match_parent"
		        android:layout_marginLeft="40dp"
		        android:layout_height="1dp"
		        android:background="@color/main_gary"/> 
		    <TextView 
		        android:id="@+id/wx_text_view"
		        android:drawableLeft="@drawable/abc_ab_bottom_solid_light_holo"
		        android:drawablePadding="10dp"
		        android:gravity="center_vertical"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="10dp"
		        android:layout_marginBottom="5dp"/>    
		    <View 
		        android:layout_width="match_parent"
		        android:layout_marginLeft="40dp"
		        android:layout_height="1dp"
		        android:background="@color/main_gary"/>	        
	        
	    </LinearLayout>
	</ScrollView>
    
</LinearLayout>
