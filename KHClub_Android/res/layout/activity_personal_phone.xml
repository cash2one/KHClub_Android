<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/main_light_white"
    android:id="@+id/personal_sign_activity">
    
    <include layout="@layout/layout_title_bar" />

    <EditText
        android:maxLength="60"
        android:textColor="@color/main_deep_black"
        android:textSize="@dimen/font_size_medium"
        android:id="@+id/desc_edit_text"
        android:hint="@string/personal_enter_phone"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:padding="10dip"
        android:background="@drawable/comment_border_view" />

    <LinearLayout 
        android:id="@+id/state_layout"
        android:layout_marginTop="5dip"
        android:paddingRight="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">
	    <TextView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/main_light_black"
	        android:text="@string/personal_friends_can_see"/>
	    <CheckBox
	        android:id="@+id/state_check_box"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>        
    </LinearLayout>

</LinearLayout>
