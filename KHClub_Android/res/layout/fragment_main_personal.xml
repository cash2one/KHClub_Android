<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_light_white"
    android:orientation="vertical" >
    
    <RelativeLayout
	    android:id="@+id/layout_base_title"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/action_bar_height_size"
	    android:background="@color/main_blue"
	    android:gravity="center_vertical" >

	    <TextView
	        android:id="@+id/base_tv_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:ellipsize="end"
	        android:gravity="center"
	        android:singleLine="true"
	        android:layout_marginRight="110dp"
	        android:text="@string/personal_me_title"
	        android:textColor="@color/main_brown"
	        android:textSize="@dimen/action_bar_title_size" />
	    <TextView
	        android:id="@+id/base_tv_back"
	        android:layout_width="50dip"
	        android:layout_height="50dip"
	        android:layout_centerVertical="true"/>
	
	    <!-- clickable暂时关闭 "@drawable/back_click_selector"-->
	    <ImageView
	        android:layout_width="35dip"
	        android:layout_height="20dip"
	        android:layout_centerVertical="true"
	        android:scaleType="fitCenter"
	        android:src="@drawable/back_btn"/>
	
		<ImageButton
		   	android:layout_alignParentRight="true"
	        android:id="@+id/btn_more_operate"
	        android:layout_width="50dip"
	        android:layout_height="match_parent"
	        android:background="@color/main_brown"
         	android:paddingRight="20dp" />
	</RelativeLayout>
	
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:background="@color/main_white">
		
		<ImageView 
		    android:id="@+id/head_image_view"
		    android:background="@color/main_gary"
		    android:layout_marginTop="10dp"
		    android:layout_marginLeft="10dp"	
		    android:layout_width="75dp"
		    android:layout_height="75dp"/>
        <TextView
            android:id="@+id/name_text_view"
            android:layout_marginTop="5dip"
            android:layout_marginLeft="15dip"
            android:layout_alignTop="@+id/head_image_view"
            android:layout_toRightOf="@+id/head_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_large"
            android:text="Mr.nobody"
            />
        <TextView
            android:id="@+id/job_text_view"
            android:layout_marginTop="3dip"
            android:layout_marginLeft="15dip"
            android:layout_below="@+id/name_text_view"
            android:layout_toRightOf="@+id/head_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_medium"
            android:text="Job"/>
        <TextView
            android:id="@+id/campany_text_view"
            android:layout_marginTop="3dip"
            android:layout_marginLeft="15dip"
            android:layout_below="@+id/job_text_view"
            android:layout_toRightOf="@+id/head_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_medium"
            android:text="Company name"/>
 		
        <LinearLayout 
            android:id="@+id/phone_number_layout"
            android:layout_below="@+id/head_image_view"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:layout_marginLeft="10dip"
	        android:layout_marginTop="10dp"
	        android:orientation="horizontal">
            
            <ImageView 
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/main_brown"/>
	        <TextView
	            android:id="@+id/phone_number_text_view"
	            android:layout_marginLeft="15dip"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/font_size_medium"
	            android:text="Phone number"/>
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/email_layout"
            android:layout_below="@+id/phone_number_layout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:layout_marginLeft="10dip"
	        android:layout_marginTop="10dp"
	        android:orientation="horizontal">
            
            <ImageView 
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/main_brown"/>
	        <TextView
	            android:id="@+id/email_text_view"
	            android:layout_marginLeft="15dip"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/font_size_medium"
	            android:text="xxxxx@xxxxr"/>
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/address_layout"
            android:layout_below="@+id/email_layout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:layout_marginLeft="10dip"
	        android:layout_marginTop="10dp"
	        android:paddingBottom="10dip"
	        android:orientation="horizontal">
            
            <ImageView 
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/main_brown"/>
	        <TextView
	            android:id="@+id/address_number_text_view"
	            android:layout_marginLeft="15dip"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/font_size_medium"
	            android:text="sdafsadfads"/>
        </LinearLayout>        
        
    </RelativeLayout>
       
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></LinearLayout>

</LinearLayout>