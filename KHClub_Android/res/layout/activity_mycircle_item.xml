<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/circle_image"
            android:layout_width="@dimen/head_image_size_large"
            android:layout_height="@dimen/head_image_size_large"
            android:scaleType="centerCrop"
            android:src="@drawable/default_avatar" />

        <RelativeLayout
            android:id="@+id/intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp" >

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/circle_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/circle_name"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/circle_people_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@id/circle_name"
                android:layout_marginTop="20dp"
                android:src="@drawable/member2x" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/circle_people_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_alignBottom="@id/circle_people_image"
                android:layout_toRightOf="@id/circle_people_image"
                android:text="0"
                 />

            <RelativeLayout
                android:focusable="true"
                android:id="@+id/recommend_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical" >
                <Button
                    android:visibility="gone"
                    android:id="@+id/recommend_btn"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/main_gold"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="关注" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>