<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 添加bar -->

    <include
        android:id="@+id/title_bar"
        layout="@layout/layout_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp" >

        <!-- 上传头像 -->

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/cover_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/signin_local_gallry" />

        <TextView
            android:id="@+id/uploading_cover"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/cover_image"
            android:layout_below="@id/cover_image"
            android:gravity="center_horizontal"
            android:text="@string/create_uploading_cover" />
        <!-- 圈子称呢 -->

        <EditText
            android:id="@+id/create_edit_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@id/uploading_cover"
            android:layout_below="@id/uploading_cover"
            android:hint="@string/circle_name_limit" >
        </EditText>

        <TextView
            android:id="@+id/create_circle_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignTop="@id/create_edit_name"
            android:gravity="center_vertical"
            android:text="@string/create_circle_name"
            android:textSize="13sp" />
        <!-- 圈子介绍 -->

        <EditText
            android:id="@+id/create_edit_introduce"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@id/uploading_cover"
            android:layout_below="@id/create_edit_name"
            android:hint="@string/circle_introduce_limit" >
        </EditText>

        <TextView
            android:id="@+id/create_circle_introduce"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignTop="@id/create_edit_introduce"
            android:gravity="center_vertical"
            android:text="@string/create_circle_introduce"
            android:textSize="13sp" />
        <!-- 圈子地址 -->

        <EditText
            android:id="@+id/create_edit_address"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@id/create_edit_introduce"
            android:layout_below="@id/create_edit_introduce" >
        </EditText>

        <TextView
            android:id="@+id/create_circle_address"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignTop="@id/create_edit_address"
            android:gravity="center_vertical"
            android:text="圈子地址"
            android:textSize="13sp" />
        <!-- 圈子电话 -->

        <EditText
            android:id="@+id/create_edit_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@id/create_edit_address"
            android:layout_below="@id/create_edit_address" >
        </EditText>

        <TextView
            android:id="@+id/create_circle_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignTop="@id/create_edit_phone"
            android:gravity="center_vertical"
            android:text="圈子电话"
            android:textSize="13sp" />
        <!-- 公众号填写 -->

        <EditText
            android:id="@+id/create_edit_server"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@id/create_edit_phone"
            android:layout_below="@id/create_edit_phone" >
        </EditText>
   <!-- 公众号二维码 -->
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/create_edit_server_qrcode"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignLeft="@id/create_edit_server"
            android:layout_below="@id/create_edit_server"
            android:src="@drawable/signin_local_gallry" />
       
        <TextView
            android:id="@+id/create_circle_server_qrcode"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignTop="@id/create_edit_server_qrcode"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="公众号二维码"
            android:textSize="13sp" />
        <!-- 圈子网址 -->

        <EditText
            android:id="@+id/create_edit_url"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@id/create_edit_server_qrcode"
            android:layout_below="@id/create_edit_server_qrcode" >
        </EditText>

        <TextView
            android:id="@+id/create_circle_url"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignTop="@id/create_edit_url"
            android:gravity="center_vertical"
            android:text="圈子网址"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/create_circle_server"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/create_edit_server"
            android:layout_alignBottom="@+id/create_edit_server"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="公众号名称"
            android:textSize="13sp" />

    </RelativeLayout>

</LinearLayout>