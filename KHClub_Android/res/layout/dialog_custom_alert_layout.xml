<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_alert_dialog_background"
        android:layout_width="280dip"
        android:layout_height="150dip"
        android:background="@drawable/round_corner_background" />

    <LinearLayout
        android:layout_width="280dip"
        android:layout_height="150dip"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_custom_alert_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/main_light_black"
            android:textSize="@dimen/font_size_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialog_interior_size_secondary"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_custom_alert_dialog_cancel"
                android:layout_width="@dimen/dialog_interior_size_large"
                android:layout_height="@dimen/dialog_interior_size_secondary"
                android:background="@drawable/selector_dialog_cancel_btn_click"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/main_deep_black"
                android:textSize="@dimen/font_size_medium" />

            <TextView
                android:id="@+id/tv_custom_alert_dialog_confirm"
                android:layout_width="@dimen/dialog_interior_size_large"
                android:layout_height="@dimen/dialog_interior_size_secondary"
                android:layout_marginLeft="20dp"
                android:background="@drawable/selector_dialog_confirm_btn_click"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/main_deep_black"
                android:textSize="@dimen/font_size_medium" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>