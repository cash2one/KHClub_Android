<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dip"
    android:background="@color/main_white" >

    <ImageView
        android:id="@+id/head_image_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/head_image_view"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="3dip"
        android:textColor="@color/main_deep_black"
        android:layout_toRightOf="@+id/head_image_view"
        android:textSize="17sp" />
    
    <TextView
        android:id="@+id/second_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/head_image_view"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip"
        android:textColor="@color/main_deep_black"
        android:layout_toRightOf="@+id/name_text_view"
        android:textSize="15sp" />    

    <TextView
        android:id="@+id/text_collect_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/head_image_view"
        android:background="@color/main_blue"
        android:padding="10dp"
        android:textSize="@dimen/font_size_large"
        android:visibility="gone" />

    <TextView
        android:id="@+id/job_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_text_view"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="2dip"
        android:layout_toRightOf="@+id/head_image_view"
        android:textColor="@color/main_deep_black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/company_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/job_text_view"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="2dip"
        android:layout_toRightOf="@+id/head_image_view"
        android:textColor="@color/main_deep_black"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/phone_number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head_image_view"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/card_phone" />

        <TextView
            android:id="@+id/phone_number_text_view"
            android:textColor="@color/main_deep_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:textSize="@dimen/font_size_medium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_number_layout"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/card_email"  />

        <TextView
            android:id="@+id/email_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/main_deep_black"
            android:layout_marginLeft="15dip"
            android:textSize="@dimen/font_size_medium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_layout"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dip" >

        <ImageView
            android:layout_marginLeft="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/card_location"  />

        <TextView
            android:id="@+id/address_text_view"
            android:textColor="@color/main_deep_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:textSize="@dimen/font_size_medium" />
    </LinearLayout>

</RelativeLayout>