<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app2="http://schemas.android.com/apk/res/com.app.khclub"
    android:id="@+id/layout_news_title_rootview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_deep_white"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/news_item_margins_left"
    android:paddingRight="@dimen/news_item_margins_right"
    android:paddingTop="@dimen/news_item_margins_top" >

    <!-- 用户头像 -->

    <com.app.khclub.base.ui.view.RoundImageView
        android:id="@+id/img_mian_news_user_head"
        android:layout_width="@dimen/head_image_size_large"
        android:layout_height="@dimen/head_image_size_large"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher"
        app2:rect_adius="2dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/item_interior_space_medium" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <!-- 昵称 -->

            <TextView
                android:id="@+id/txt_comment_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名字"
                android:textColor="@color/main_deep_black"
                android:textSize="@dimen/font_size_medium" />

            <View
                android:id="@+id/view12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <!-- 时间 -->

            <TextView
                android:id="@+id/txt_comment_publish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:text="12:20"
                android:textColor="@color/main_deep_black"
                android:textSize="@dimen/font_size_tiny" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_comment_user_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_interior_space_small"
            android:drawablePadding="2dp"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:text="职称"
            android:textColor="@color/main_deep_black"
            android:textSize="@dimen/font_size_tiny" />

        <TextView
            android:id="@+id/txt_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="评论的内容评论的内容评论的内容评论的内容评论的内容评论的内容评论的内容评论的内容评论的内容"
            android:textColor="@color/main_deep_black"
            android:textSize="@dimen/font_size_tiny" />

        <View
            android:id="@+id/view11"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:background="@color/main_gary" />
    </LinearLayout>

</LinearLayout>