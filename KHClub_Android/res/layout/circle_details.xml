<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_deep_white"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_bar"
        layout="@layout/layout_title_bar" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/circle_cover"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/loading_default" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp" >

                <TextView
                    android:id="@+id/circle_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/circle_name"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/circle_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/circle_name"
                    android:gravity="center_vertical"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/circle_like_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="0"
                    android:textSize="11sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_toLeftOf="@id/circle_like_tv"
                    android:src="@drawable/like_btn_normal" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/main_light_gary" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/circle_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/news_circle_intro"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/circle_introduce_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/circle_info"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="13sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/main_light_gary" />
            <!-- 地址 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp" >

                <ImageView
                    android:id="@+id/localtion_img"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/location_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/localtion_img"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/circle_address_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/main_light_gary" />
                </LinearLayout>
            </RelativeLayout>
            <!-- 圈主电话 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp" >

                <ImageView
                    android:id="@+id/card_phone"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/icon_phone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/card_phone"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/card_phone_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/main_light_gary" />
                </LinearLayout>
            </RelativeLayout>
            <!-- 微信公众号 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp" >

                <ImageView
                    android:id="@+id/icon_weixin"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/icon_weixin" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/icon_weixin"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/circle_wx_num"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/main_light_gary" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/qrcode_image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_image"
                    android:visibility="gone" />
            </RelativeLayout>
            <!-- 网址 -->

            <RelativeLayout
                android:id="@+id/relativelayout_web"
                android:layout_width="match_parent"
                android:layout_height="35dp" >

                <ImageView
                    android:id="@+id/icon_web"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/icon_web" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/icon_web"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/circle_web_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/main_light_gary" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/modify_circle_detail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/round_button"
                    android:text="@string/edit_circle"
                    android:textColor="@color/main_deep_white"
                    android:textSize="15sp"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>