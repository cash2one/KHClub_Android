<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_news_operate_rootview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_deep_white"
    android:clickable="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="horizontal" >

        <!-- 发布的时间 -->

        <TextView
            android:id="@+id/txt_main_news_publish_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top|left"
            android:text="时间"
            android:layout_gravity="top"
            android:textColor="@color/main_deep_black" />

        <!-- 分享按钮 -->

        <TextView
            android:id="@+id/btn_mian_share"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/alert_dialog_confirm_btn_normal"
            android:text="分享" />

        <!-- 评论按钮 -->

        <TextView
            android:id="@+id/btn_mian_reply"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/alert_dialog_confirm_btn_normal"
            android:text="评论" />

        <!-- 点赞按钮 -->

        <TextView
            android:id="@+id/btn_news_like"
             android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/alert_dialog_confirm_btn_normal"
            android:text="点赞" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:background="@color/main_gary" />

</LinearLayout>