<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_popup_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="center_horizontal|bottom"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_share_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#66000000"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <ImageView
            android:id="@+id/img_share_to_friend"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:src="@drawable/iconfont_friend" />

        <ImageView
            android:id="@+id/img_share_to_wechat"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:src="@drawable/iconfont_weixin" />

        <ImageView
            android:id="@+id/img_share_to_circel_of_friends"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:src="@drawable/iconfont_pengyouquan" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_switch_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#66000000"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <ImageView
            android:id="@+id/img_share_to_weibo"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/iconfont_weibo" />

        <ImageView
            android:id="@+id/img_share_to_qzone"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/iconfont_qqkongjian" />

        <ImageView
            android:id="@+id/img_share_to_qq_friends"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/iconfont_qq" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#66000000"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_delete_friend"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@color/main_gold"
            android:gravity="center"
            android:text="@string/delete_friend"
            android:textColor="@color/main_deep_white" />

        <TextView
            android:id="@+id/txt_edit_remark"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/main_gold"
            android:gravity="center"
            android:text="@string/edit_remark"
            android:textColor="@color/main_deep_white" />

        <TextView
            android:id="@+id/txt_cancel"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/main_gold"
            android:gravity="center"
            android:text="@string/alert_cancel"
            android:textColor="@color/main_deep_white" />
    </LinearLayout>

</LinearLayout>